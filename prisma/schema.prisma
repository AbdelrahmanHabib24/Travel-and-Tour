model Payment {
  id         Int      @id @default(autoincrement())
  orderId    Int
  paymentKey String
  status     String   @default("initialized")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  order Order @relation(fields: [orderId], references: [id])
}

